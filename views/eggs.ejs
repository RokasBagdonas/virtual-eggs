<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="icon" href="/images/utility/icon-feather.svg" type="image/x-icon">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/stylesheets/dissertation.css"/>


    <script src="/three/build/three.js"></script>
    <script src="/three/examples/js/controls/OrbitControls.js"></script>
    <script src="/three/examples/js/loaders/GLTFLoader.js"></script>
    <script src="/javascripts/dissertation/libs/kriging.js"></script>
    <script src="/javascripts/dissertation/libs/noise.js"></script>
    <script src="/rainbowvis/rainbowvis.js"></script>

    <script src="/javascripts/dissertation/bundle-main.js" defer></script>

</head>
<body>

<div id="container">


    <div class="item" id="scene-container">
        <canvas id="scene-canvas" width="256" height="256"></canvas>
    </div>


    <div class="item" id="params-container">

        <div id="general-container"><h4>General options</h4></div>


        <div id="parameter-adjustment">
            <h5> Parameter adjustment </h5>

            <div class="param" id="streaks-container">
                <h4>Streaks</h4>

                <div id="scrawl-container"><h5>Scrawl</h5> </div>

                <div id="shorthand-container"><h5>Shorthand</h5> </div>

            </div>

            <div class="param" id="blotches-container">
                <h4>Blotches</h4>
                <div id="blotches-container"><h5>Blotches</h5></div>
                <div id="black-cap-container"><h5>Black Cap</h5></div>
            </div>

            <div class="param" id="other-container">
                <h6>Other</h6>
            </div>


        </div>
    </div>


        <div class="item" id="texture-container">
            <canvas class="texture" id="base-layer"        width="256" height="256"></canvas>

            <canvas class="texture" id="pepper-plot"        width="256" height="256"></canvas>
            <canvas class="texture" id="small-blotch"       width="256" height="256"></canvas>
<!--            <canvas class="texture" id="big-blotch"         width="256" height="256"></canvas>-->
            <canvas class="texture" id="scrawl"             width="256" height="256"></canvas>
            <canvas class="texture" id="shorthand"          width="256" height="256"></canvas>
            <canvas class="texture" id="black-cap"                width="256" height="256"></canvas>



        </div>



</div>



</body>
</html>
